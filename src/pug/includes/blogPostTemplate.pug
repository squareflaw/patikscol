extends ../config/template

block main
  main(itemscope itemprop="mainContentOfPage" role="main")
    section(itemscope itemtype="https://schema.org/Blog").section.blogPost
      article(itemprop="blogPost" itemscope itemtype="https://schema.org/BlogPosting") 
        
        meta(itemprop="mainEntityOfPage" content=post.Url)
        h1(itemprop="name headline").blogPost__title=post.blogPostTitle

        p.blogPost__author: a(rel="author" href="#" title="ver articulos del autor")=post.author


        p.blogPost__date: time(datetime=post.dateTimeMeta itemprop="datePublished")=post.date
        meta(itemprop="dateModified" content=post.dateTimeModified)

        figure(itemprop="image" itemscope itemtype="https://schema.org/ImageObject")
          img(itemprop="url" alt=post.imgAlt src=post.imgUrl).blogPost__img
          figcaption(itemprop="caption").blogPost__caption Photo by #[a(href=post.imgAuthorUrl target="_blank")=post.imgAuthor ] from #[a(href=post.imgOriginalSourceUrl target="_blank")=post.imgOriginalSource].
        
        .blogPost__body(itemprop="articleBody")
          block blogPostUrl

        br
        span(itemprop="author" itemscope itemtype="https://schema.org/Person").blogPost__authorSpace
          a(rel="author" itemprop="url" href="#" title="View author biography")
            span(itemprop="name")=post.author
        span(itemprop="publisher" itemscope itemtype="https://schema.org/Organization")
          meta(itemprop="name" content=site.name)
          span(itemprop="logo" itemscope itemtype="https://schema.org/ImageObject")
            meta(itemprop="url" content= site.domain + site.logoUrlPng)
            meta(itemprop="width" content="60")
            meta(itemprop="height" content="60")

        .comments
          <div id="disqus_thread"></div>
          script.
            var disqus_config = function () {
            this.page.url = site.domain + post.Url;
            this.page.identifier = site.domain + post.Url;
            };
            (function() { 
            var d = document, s = d.createElement('script');
            s.src = 'https://patiks.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
            })();
          
          <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>