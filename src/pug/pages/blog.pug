extends ../config/template
include ../includes/card-blogPost
append config
  -title = "Blog"
  -headTitle = title + " | " + site.name;

  -description = "blog dedicado a educar, informar y fomentar la adopción para así concienciar a la población sobre la tenencia responsable de un animal."

  -ogUrl= site.domain + "/blog.html"

block main
  main(itemscope itemprop="mainContentOfPage" role="main")
    section(itemscope itemtype="https://schema.org/Blog").section.section-blog
      .section-title
        h4.title Blogs Posts
        img(src="./img/blog-icon.svg", alt="notebook logo")

      .cards 
        -for(var i = 0; i < posts.length ; i++)
          +card-blogPost(posts[i])  