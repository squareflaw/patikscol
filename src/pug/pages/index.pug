extends ../config/template
include ../includes/card-pet
include ../includes/card-blogPost

append config

  -headTitle = site.name + " - Adopta una mascota"; 
 
       
 
block main
  main(itemscope itemprop="mainContentOfPage" role="main")#main


    section.banner
      p.banner__text El #[span amor] no se puede comprar, pero se puede #[span rescatar.]
      img(src="./img/banner-trans.png" alt="Dog kissing a woman").banner__img
  
    .slogan
      p Patiks es un sitio en el que puedes adoptar a una mascota y aprender sobre el cuidado animal.    

    .illustrations
      .illustration
        img(src="./img/womanAndPetShape.svg" alt="Woman and her pet").illustration__img
        div.illustration__content
          p.title ¿Por qué adoptar?  
          p.content Encontrarás a un amigo fiel y cariñoso cada vez que entres por la puerta.  


      .illustration
        img(src="./img/bulldogShape.svg", alt="Bulldog").illustration__img
        div.illustration__content
          p.title ¡No compres!
          p.content Mientras muchos compran mascotas, otras mueren en la calle. No compres, adopta uno sin casa. 


      .illustration
        img(src="./img/dog-airplaneShape.svg", alt="Dog watching and airplane take off").illustration__img
        div.illustration__content
          p.title ¿Te vas del país?
          p.content Nosotros te ayudamos a dar a tu mascota en adopción.¡No la abandones!
        

    
    section.section.section-pets
      .section-title
        h4.title Mascotas
        img(src="./img/pawprints.svg", alt="pawn prints logo")
      .cards.cards-pets
        -for(var i = 0; i < 3 ; i++)
          +card-pet(pets[i])

      p.see-all: a(href="./pets.html").button-all Ver todas
  
      
 



    section(itemscope itemtype="https://schema.org/Blog").section.section-blog#blog
      .section-title
        h4.title Blogs Recientes
        img(src="./img/blog-icon.svg", alt="pawn prints logo")

      .cards
        -for(var i = 0; i < 3 ; i++)
          +card-blogPost(posts[i])

      p.see-all: a(href="./blog.html").button-all Ir al blog


    section(itemscope itemtype="https://schema.org/Blog").section.section-blog
      .section-title
        h4.title Blogs Destacados
        img(src="./img/blog-icon.svg", alt="pawn prints logo")

      .cards
        +card-blogPost(posts[posts.length-5]) 
        +card-blogPost(posts[posts.length-4]) 
        +card-blogPost(posts[posts.length-2]) 

      p.see-all: a(href="./blog.html").button-all Ir al blog


