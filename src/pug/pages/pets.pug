extends ../config/template
include ../includes/card-pet
append config
  -title = "Mascotas"
  -headTitle = title+ " | " + site.name;
  -description = "Adopta una mascota y dale un nuevo hogar a un hermoso compa√±ero.";

  -ogUrl= site.domain + "/pets.html";
  -ogImgUrl = site.domain + "/img/Ruby.jpg";  

block main
  main(itemscope itemprop="mainContentOfPage" role="main")
    section.section.section-pets
      .section-title
        h4.title Mascotas
        img(src="./img/pawprints.svg", alt="pawn prints logo")
